{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": ["./src", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "src/express.d.ts"],
  "exclude": ["node_modules", "dist"]
}
